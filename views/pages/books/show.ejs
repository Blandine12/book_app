<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layout/head') %>
    <link rel="stylesheet" href="/styles/layout2.css">
</head>
<body>
    <header>
        <%- include('../layout/header') %>
      </header>
    <main>
        <section class="book container">
          <ul id="bookapp-list">
            <li class="bookapp-item" data-id="<%= oneBook.id %>">
              <img src="<%= oneBook.image %>" alt="<%= oneBook.title %>" \>
              <h4>Book: <%= oneBook.title %></h4>
              <p>Author: <%= oneBook.author %></p>
              <p>ISBN: <%= oneBook.isbn %></p>
              <p>Summary: <%= oneBook.summary %></p>
              <p><%= oneBook.bookshelf %></p>
            </li>
          </ul>
        </section>
        <section class='buttons'>
        <%- include('edit.ejs', {formAction: 'update', book: oneBook}) %>
        <%- include('delete.ejs', {formAction: 'delete', book: oneBook}) %>
      </section>
      </main>
</body>
</html>